# ===========================================
# SHOPEE AFFILIATE OPS - VARIÁVEIS DE AMBIENTE
# ===========================================
# Copie este arquivo para .env e preencha com suas credenciais

# Database
DATABASE_URL=sqlite:///./shopee_affiliate.db
# Para produção com PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/shopee_affiliate

# Shopee Affiliate API
SHOPEE_AFFILIATE_API_KEY=seu_api_key_aqui
SHOPEE_AFFILIATE_SECRET=seu_secret_aqui
SHOPEE_PARTNER_ID=seu_partner_id_aqui

# LLM APIs
# DeepSeek (para ranking e análise)
DEEPSEEK_API_KEY=seu_deepseek_key_aqui

# OpenAI GPT (para copywriting)
OPENAI_API_KEY=seu_openai_key_aqui

# Google Gemini (para roteiros de vídeo e análise de imagens)
GOOGLE_API_KEY=seu_google_key_aqui

# Telegram Bot
TELEGRAM_BOT_TOKEN=seu_telegram_bot_token_aqui
TELEGRAM_GROUP_CASA_ID=-1001234567890
TELEGRAM_GROUP_TECH_ID=-1001234567891
TELEGRAM_GROUP_PET_ID=-1001234567892
TELEGRAM_GROUP_COSMETICOS_ID=-1001234567893
TELEGRAM_ALERT_CHANNEL_ID=-1001234567894

# Buffer API (para agendamento social media)
BUFFER_ACCESS_TOKEN=seu_buffer_token_aqui

# Cloudflare R2 (para storage de vídeos)
R2_ACCOUNT_ID=seu_account_id_aqui
R2_ACCESS_KEY_ID=seu_access_key_aqui
R2_SECRET_ACCESS_KEY=seu_secret_key_aqui
R2_BUCKET_NAME=shopee-videos

# Configurações gerais
ENVIRONMENT=development
LOG_LEVEL=INFO
TIMEZONE=America/Sao_Paulo

# Limites de publicação (para evitar spam)
MAX_POSTS_TIKTOK_PER_DAY=4
MAX_POSTS_REELS_PER_DAY=3
MAX_POSTS_STORIES_PER_DAY=6
MAX_POSTS_TELEGRAM_PER_DAY=10

# Nichos ativos (separados por vírgula)
ACTIVE_NICHES=casa,tech,pet,cosmeticos
